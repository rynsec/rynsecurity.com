---
import Layout from '../layouts/BaseLayout.astro';

const title = "Phishing URL Analiz Aracı";
---

<Layout title={title}>
  <section class="max-w-2xl mx-auto p-6 mt-12 bg-white dark:bg-zinc-900 rounded-2xl shadow-md">
    <h1 class="text-3xl font-bold mb-4 text-center">Phishing URL Analiz Aracı</h1>
    <p class="text-gray-600 dark:text-gray-300 text-center mb-6">
      Şüpheli bir bağlantıyı analiz etmek için aşağıya yapıştırın.
    </p>

    <form id="analyze-form" class="space-y-4">
      <input
        type="url"
        id="url"
        name="url"
        placeholder="https://ornek.com"
        required
        class="w-full p-3 rounded-lg border border-gray-300 dark:border-zinc-700
               bg-white dark:bg-zinc-800
               text-black dark:text-white
               placeholder-gray-500 dark:placeholder-gray-400
               focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        type="submit"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white py-2 px-4 rounded-lg font-semibold transition"
      >
        Analiz Et
      </button>
    </form>

    <div id="result" class="mt-6 text-center text-lg font-medium text-gray-800 dark:text-gray-200"></div>

    <div id="analysis-details" class="mt-6 text-center text-sm text-gray-600 dark:text-gray-400">
      <!-- Details will be displayed here after analysis -->
    </div>
  </section>

  <script type="module">
    const form = document.getElementById("analyze-form");
    const result = document.getElementById("result");
    const analysisDetails = document.getElementById("analysis-details");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      result.innerText = "🔍 Analiz ediliyor...";
      analysisDetails.innerHTML = '';  // Clear previous details

      const url = form.url.value.trim();
      try {
        const response = await fetch("https://api.rynsecurity.com/analyze", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ url }),
        });

        const data = await response.json();

        if (response.ok && data.score) {
          // Update status message
          const status = data.score >= 50
            ? "✅ Güvenli bir bağlantı gibi görünüyor."
            : "🚨 Tehlikeli! Phishing tespit edildi.";
          result.innerText = status;

          // Show detailed analysis
          analysisDetails.innerHTML = `
            <div><strong>Statik Analiz Sonuçları:</strong> ${JSON.stringify(data.static_analysis)}</div>
            <div><strong>Dinamik Analiz Sonuçları:</strong> ${JSON.stringify(data.dynamic_analysis)}</div>
            <div><strong>Risk Seviyesi:</strong> ${data.risk_level}</div>
            <div><strong>Detaylar:</strong> ${data.details}</div>
          `;
        } else {
          result.innerText = "⚠️ Analiz sonucu alınamadı.";
        }
      } catch (err) {
        result.innerText = "❌ Hata: Sunucuya ulaşılamadı.";
      }
    });
  </script>
</Layout>
