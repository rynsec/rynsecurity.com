---
import BaseLayout from './BaseLayout.astro';

const {
  title,
  date,
  lang = "en",
} = Astro.props;
---

<BaseLayout title={title} lang={lang}>
  <article class="prose prose-invert max-w-3xl mx-auto px-4 py-10">
    <h1>{title}</h1>
    <p class="text-sm text-gray-400">{date}</p>
    <slot />
  </article>
</BaseLayout>
